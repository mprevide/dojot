{
    "name": "backstage",
    "version": "2.0.0",
    "description": "This service is intended to be an intermediary between the dojot and Keycloak APIs for the GUIs.",
    "engines": {
        "node": ">=12.21",
        "npm": ">=6.14"
    },
    "private": true,
    "main": "index.js",
    "scripts": {
        "backstage": "node --unhandled-rejections=strict index.js",
        "dev": "nodemon index.js --ignore ./config -V",
        "debug": "DEBUG=express-session node --unhandled-rejections=strict index.js",
        "test": "jest",
        "test:watch": "jest --watchAll --no-cache --runInBand --detectOpenHandles",
        "lint": "eslint app/** tests/** index.js --ext .js",
        "lint:fix": "eslint app/** tests/** index.js --fix --ext .js",
        "check-licenses": "apache2-license-checker"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/dojot/dojot"
    },
    "keywords": [
        "dojot",
        "backend-for-gui",
        "keycloak",
        "graphql"
    ],
    "files": [
        "package-lock.json",
        "app/**/*.js",
        "test/",
        "!test/unit/coverage/"
    ],
    "author": "@mprevide",
    "contributors": [
        "@luisfelipefurlan",
        "@juliamourac"
    ],
    "license": "Apache-2.0",
    "licenses": [
        {
            "type": "Apache-2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0"
        }
    ],
    "homepage": "https://github.com/dojot",
    "dependencies": {
        "@dojot/microservice-sdk": "0.1.11",
        "axios": "^0.21.1",
        "base64url": "^3.0.1",
        "caniuse-lite": "^1.0.30001208",
        "express": "^4.17.1",
        "express-graphql": "^0.12.0",
        "express-openapi-validator": "^4.8.0",
        "express-session": "^1.17.1",
        "flat": "^5.0.2",
        "graphql": "^15.5.0",
        "graphql-tools": "^7.0.4",
        "http-errors": "^1.8.0",
        "http-proxy-middleware": "^1.1.1",
        "http-status-codes": "^2.1.4",
        "http-terminator": "^2.0.3",
        "js-yaml": "^3.14.0",
        "lodash": "^4.17.21",
        "lodash.camelcase": "^4.3.0",
        "moment": "^2.29.1",
        "pg": "^8.5.1",
        "randomstring": "^1.1.5",
        "redis": "^3.0.2",
        "swagger-ui-express": "^4.1.4"
    },
    "jest": {
        "verbose": true,
        "testRegex": [
            "(/tests/.*|(\\.|/))\\.test\\.[jt]sx?$"
        ],
        "collectCoverageFrom": [
            "app/**/*.js",
            "!index.js"
        ],
        "moduleDirectories": [
            "node_modules",
            "lib"
        ],
        "collectCoverage": true,
        "clearMocks": true,
        "testPathIgnorePatterns": [
            "tests/coverage"
        ],
        "coverageDirectory": "tests/coverage",
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        }
    },
    "devDependencies": {
        "@bbc/apache2-license-checker": "^1.1.4",
        "eslint": "^7.24.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-security": "^1.4.0",
        "eslint-plugin-security-node": "^1.0.14",
        "jest": "^26.4.2",
        "nodemon": "^2.0.4",
        "supertest": "^6.0.1"
    }
}